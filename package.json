{
    "name": "quomponents",
    "description": "The library of react components being used in the QuoDeck product suite",
    "main": "dist/index.js",
    "version": "0.1.2",
    "private": false,
    "files": [
        "dist",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/arijitl/Quomponents.git"
    },
    "dependencies": {
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@fortawesome/fontawesome-free": "^5.15.4",
        "@mui/material": "^5.2.1",
        "@u-wave/react-vimeo": "^0.9.6",
        "framer-motion": "4.1.17",
        "node-sass": "^6.0.1",
        "react": "^17.0.2",
        "react-avatar-editor": "^12.0.0",
        "react-calendar": "^3.7.0",
        "react-circular-progressbar": "^2.0.4",
        "react-color": "^2.19.3",
        "react-datepicker": "^4.8.0",
        "react-dom": "^17.0.2",
        "react-otp-input": "^2.4.0",
        "react-pinch-zoom-pan": "^1.4.5",
        "react-rangeslider": "^2.2.0",
        "react-scripts": "4.0.3",
        "react-share": "^4.4.0",
        "react-slick": "^0.28.1",
        "react-test-renderer": "^17.0.2",
        "react-treebeard": "^3.2.4",
        "react-youtube": "^7.14.0",
        "react-zoom-pan-pinch": "^2.1.3",
        "slick-carousel": "^1.8.1",
        "video-react": "^0.15.0",
        "web-vitals": "^1.0.1"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "4.0.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --setupFilesAfterEnv='<rootDir>/config/jest/setupEnzyme.js'",
        "eject": "react-scripts eject",
        "storybook": "start-storybook -p 6006 -s public",
        "build-storybook": "build-storybook -s public",
        "clean": "rimraf dist",
        "compile": "npm run clean && cross-env NODE_ENV=production babel src/components --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,stories.js,__snapshots__",
        "chromatic-dev": "npx chromatic --project-token=c349e143ef76",
        "chromatic": "chromatic --exit-zero-on-changes",
        "build-storybook-docs": "build-storybook  --docs"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@babel/preset-env": "^7.15.8",
        "@babel/preset-react": "^7.14.5",
        "@storybook/addon-a11y": "^6.5.8",
        "@storybook/addon-actions": "^6.5.8",
        "@storybook/addon-essentials": "^6.5.8",
        "@storybook/addon-storyshots": "^6.5.8",
        "@storybook/addons": "^6.5.8",
        "@storybook/node-logger": "^6.5.8",
        "@storybook/preset-create-react-app": "^3.2.0",
        "@storybook/react": "^6.5.8",
        "@storybook/theming": "^6.5.8",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
        "babel-loader": "8.1.0",
        "chromatic": "^6.1.0",
        "cross-env": "^7.0.3",
        "enzyme": "^3.11.0",
        "enzyme-to-json": "^3.6.2",
        "jest": "26.6.0",
        "storybook-addon-turbo-build": "^1.1.0"
    }
}
